{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "moduleResolution": "Node",
    "sourceMap": true,
    "rootDirs": ["src"],
    "outDir": "lib",
    "noEmitOnError": true,
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": false,
    "jsx": "react",
    "resolveJsonModule": true
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents"
  },
  "exclude": ["**/*.d.ts", "./lib", "node_modules"]
}
