.chat {
  display: flex
  flex-direction: column
  align-items: center
  width: 100%
  height: 100%
}

.chat-header {
  padding: 5px
}

.chat-log {
  width: 50%
  min-height: 300px
  max-height: calc(100% - 86px - 29px - 100px)
  border: 1px solid black
}

.chat form {
  width: 50%
  display: flex
  flex-direction: column
  align-items: center
}

@media (max-width: 400px) {
  .chat-log, .chat form {
    width: calc(100% - 60px)
  }
}

.chat input[type='submit'] {
  width: 100%
  height: 30px
  margin: 10px 0
  padding: 5px
}

.chat input[type='text'] {
  width: calc(100% - 5px * 2 - 4px)
  height: 30px
  margin: 0px
  padding: 5px
}

